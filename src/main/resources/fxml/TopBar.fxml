    <Label fx:id="lblFolderPath" text="Monitoring: C:/Users/You/Projects/Confidential" styleClass="folder-path" />
    <Region HBox.hgrow="ALWAYS" />
    
    <!-- Status pill -->
    <HBox fx:id="statusPill" styleClass="status-pill">
